<%= form_tag search_list_path, method: :get do %>
  <div class="search-form-control form-group">
  <%= text_field_tag :query,
    params[:query],
    class: "form-control string required",
    id:"search_query",
    placeholder: "Find a movie in the list '#{@list.name}'"
  %>
  <%= submit_tag "Search", class: "btn btn-flat" %>
  </div>

<% end %>

<%= @list.name%>
<% @list.reviews.each do |review|%>
  <p><%= review.rating%> - <%= review.content%></p>
<%end%>
<% @list.bookmarks.each do |bookmark|%>
  <p><%= bookmark.comment%></p>
  <p><%= bookmark.movie.title%></p>
  <%= link_to "Delete #{bookmark.comment}",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Back", lists_path %>

<h3>Add A New Review</h3>
    <%= simple_form_for([@list, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.button :submit%>
    <% end %>

<h3>Add A New Movie</h3>
    <%= simple_form_for([@list, @bookmark]) do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie, input_html: { class: 'select2' }%>
      <%= f.button :submit %>
    <% end %>
